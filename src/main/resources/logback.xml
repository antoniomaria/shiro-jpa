<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">

    <!-- encoders are assigned by default the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
    <encoder>
      <pattern>
        %d{dd-MM-yyyy HH:mm:ss} [%thread] %-5level (%file:%line\) - %message%n
      </pattern>
    </encoder>
  </appender>

  <logger name="org.eclipse.persistence.logging.sql" level="error" />

  <logger name="org.springframework.orm.jpa.JpaTransactionManager" level="INFO" />

  <logger name="net.sf.lab.shiro" level="DEBUG" />

  <logger name="org.dbunit.database.statement" level="info" />

  <root level="ERROR">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>